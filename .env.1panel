# 1Panel 部署配置
# 用于部署到腾讯云服务器的 1Panel 面板

# 服务器 SSH 配置
SERVER_HOST=your_server_ip_here
SERVER_PORT=22
SERVER_USER=root

# SSH 密钥路径（推荐使用密钥认证）
SSH_KEY_PATH=~/.ssh/id_rsa

# 或者使用密码认证（不推荐，不安全）
# SERVER_PASSWORD=your_password_here

# 1Panel 网站目录
# 默认 1Panel 的网站目录在 /opt/1panel/apps/openresty/openresty/www/sites/你的站点名称/index
REMOTE_DIR=/opt/1panel/apps/openresty/openresty/www/sites/quartz-online/index

# 备份配置
ENABLE_BACKUP=true
BACKUP_DIR=/opt/1panel/backup/quartz-online

# 构建配置
NODE_ENV=production
BUILD_TARGET=1panel

# 项目名称
PROJECT_NAME=quartz-online

# Next.js 配置
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# 部署后是否重启 PM2/Nginx（可选）
RESTART_SERVICE=false
SERVICE_NAME=quartz-online
